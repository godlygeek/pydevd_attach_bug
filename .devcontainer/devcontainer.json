{
  "name": "Dev container",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  "settings": {
    "python.pythonPath": "/usr/local/bin/python"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance"
  ],
  "postCreateCommand": "pip install -e . cython setuptools",
  "remoteUser": "vscode"
}
